{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "activate-environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source ./tools/activate-env.sh && echo 'Environment activated for Flutter debugging'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "flutter: clean",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source ./tools/activate-env.sh && flutter clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": [],
            "detail": "Clean Flutter build cache and compiled shaders"
        },
        {
            "label": "flutter: pub get",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source ./tools/activate-env.sh && flutter pub get"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Get Flutter dependencies"
        },
        {
            "label": "flutter: build & run (macOS)",
            "dependsOrder": "sequence",
            "dependsOn": [
                "flutter: clean",
                "flutter: pub get"
            ],
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source ./tools/activate-env.sh && flutter run -d macos --enable-impeller --enable-flutter-gpu"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$dart-analyze"
            ],
            "detail": "Clean, get dependencies, then build and run Flutter app on macOS"
        },
        {
            "label": "build: project (via build.sh)",
            "type": "shell",
            "command": "bash",
            "args": [
                "./tools/build.sh",
                "build-single",
                ".",
                "macos"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$dart-analyze"
            ],
            "detail": "Build project using tools/build.sh script"
        }
    ]
}