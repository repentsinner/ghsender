{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "activate-environment",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source ./tools/activate-env.sh && echo 'Environment activated for Flutter debugging'"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}